# goduckbot configuration
#
# Mode: "lite" (default) or "full"
#   lite: Uses adder to tail chain from tip, Koios API for epoch nonces
#   full: Historical chain sync from Shelley genesis, builds local nonce history
mode: "lite"

poolId: "YOUR_POOL_ID"
ticker: "TICKER"
poolName: "Pool Name"
nodeAddress:
  host1: "YOUR_CARDANO_NODE_ADDRESS_1:3001"   # NtN (chain sync)
  host2: "YOUR_CARDANO_NODE_ADDRESS_2:3001"   # NtN (optional failover)
  ntcHost: "YOUR_CARDANO_NODE_ADDRESS_1:30000" # NtC (local state queries via socat)

networkMagic: 764824073  # mainnet. preprod is 1, preview is 2 and sancho is 4.

telegram:
  enabled: true  # set to false to disable Telegram notifications
  gifEnabled: true  # set to false to send photos instead of GIFs
  channel: "YOUR_TELEGRAM_CHANNEL_ID"
  # token via TELEGRAM_TOKEN env var

twitter:
  enabled: false  # set to true and provide env vars to enable
  gifEnabled: true  # set to false to post text-only tweets (no media)
  # Credentials via env vars: TWITTER_API_KEY, TWITTER_API_KEY_SECRET,
  # TWITTER_ACCESS_TOKEN, TWITTER_ACCESS_TOKEN_SECRET

leaderlog:
  enabled: true
  vrfKeyPath: "/keys/vrf.skey"
  timezone: "America/New_York"

# Database configuration (only used when leaderlog.enabled is true)
database:
  driver: "sqlite"          # "sqlite" (default) or "postgres"
  path: "./goduckbot.db"    # SQLite file path (only used with driver: sqlite)
  # PostgreSQL settings (only used with driver: postgres)
  host: "localhost"
  port: 5432
  name: "goduckbot"
  user: "goduckbot"
  password: ""  # Or use GODUCKBOT_DB_PASSWORD env var
